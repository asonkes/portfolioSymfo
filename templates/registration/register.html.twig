{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="max-w-full h-full flex flex-col font-family bg-black" id="registration">

		<h2 class="text-white text-50 p-2.5 pt-16 tracking-wider">Inscription</h2>

		<div class="w-full flex grow justify-center border-4 border-rose">
			<div class="w-2/4 flex justify-center text-white border-4 border-red">

				{{ form_errors(registrationForm) }}

				{{ form_start(registrationForm) }}

				<div class="flex text-20 my-3 border-4 border-red">
					{{ form_row(registrationForm.firstname) }}
				</div>

				<div class="text-20 my-3 border-4 border-red">
					{{ form_row(registrationForm.lastname) }}
				</div>

				<div class="text-20 my-3 border-4 border-red">
					{{ form_row(registrationForm.email) }}
				</div>

				<div class="text-20 my-3 border-4 border-red">
					{{ form_row(registrationForm.plainPassword, 
					{label: 'Password'}) 
					}}
				</div>

				<div class="text-20 my-3 border-4 border-red">
					{{ form_row(registrationForm.agreeTerms) }}
				</div>

				<div class="flex justify-center text-20 my-3 border-4 border-red">
					<button type="submit" class="text-red text-red p-3 border-4 border-red">M'inscrire</button>
					{{ form_end(registrationForm) }}
				</div>

			</div>
		</div>
	</div>
{% endblock %}
